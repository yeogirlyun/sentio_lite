            price_max = filtered_data['high'].max()
            price_range = price_max - price_min
            padding = price_range * 0.05  # 5% padding
            fig.update_yaxes(
                range=[price_min - padding, price_max + padding],
                row=1, col=1
            )

        return fig
    
